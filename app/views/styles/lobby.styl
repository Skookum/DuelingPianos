#citybackdrop
  background two-stop(#2a2f5c, #4953ad)
  width 100%
  height 100%
  display block
  position relative
  
  #playername
    background none
    border 1px solid #2a2f5c
    position absolute
    top 10px
    right 10px
    border-radius 10px
    padding 5px
    color #eee
    font-size 14px
    text-align center
  
  #playername:hover
    border 1px solid #eee
  
  #club1
    background #595
    position absolute
    bottom 10px
    left 100px
    display block
    height 400px
    width 300px
    z-index 2
    border-radius 2px 2px 0 0
    box-shadow 0 0 10px rgba(0,0,0,0.3)
    
    #sign
      position absolute
      top 75px
      left 10px
      background #555
      border 1px solid #333
    
    #door
      background #777
      position absolute
      bottom 0px
      left 50px
      width 60px
      height 100px
      border 1px solid #000
      
      #knob
        background #333
        position absolute
        top 50%
        left 10px
        width 10px
        height 10px
        border 1px solid #000
        border-radius 10px
    
    #door:hover
      background #efecb7
      #knob
        display none
        
  
  #street
    background #333
    border-top 1px solid #ccc
    position absolute
    bottom 0px
    left 0px
    display block
    height 20px
    width 100%
    z-index 99