#club
  width: 200%;
  height: 100%;
  transition all 1s cubic-bezier(.77, 0, .20, 1)
  &.stage
    transform translateX(-50%)
  > div
    width: 50%;
    display: inline-block;
    position: relative;
    height: 100%;
    vertical-align top
  #stage
    perspective 50
    #play-area
      position absolute
      bottom 25%
      top -150%
      left 25%
      right 25%
      margin 0 auto
      perspective-origin 0 100%
      transform rotateX(5deg) translateY(0)
      transform-origin 0 100%
      .keyroll
        //animation song 180s linear
        transition all 1s linear