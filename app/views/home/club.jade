#club
  button#goToCrowd Select New Song
  #crowd
    #chooser.modal
      h2 Choose a song:
      ul
        - for(var i in songs)
          li
            a(href="javascript:club.chooseSong('#{songs[i].ytid}')") #{songs[i].name}
  #stage
    #videoPlayer(style="display: none")
    #time
    #play-area
      #vis
    div(style="position:absolute")
      button(onclick="club.player.playVideo()") Play
      button(onclick="club.player.pauseVideo()") Stop
      button(onclick="club.player.seekTo(5)") Go back to 5
      button(onclick="club.player.seekTo(45)") Jump into the middle

script(src='/js/modules/songvis.js', type='text/javascript')
script
  club.init();

  $("#goToCrowd").click(function(){
    player.pauseVideo();
    $('#club').removeClass('stage');
  });