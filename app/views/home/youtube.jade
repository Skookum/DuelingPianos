h1 YouTube Tester

#videoPlayer
#time
#vis

script(src='/js/modules/songvis.js', type='text/javascript')

script
  var vis = new SongVis({
    container: 'vis',
    ratio: 0.03,
    lookahead: 100
  });
  vis.load_song('/songdata/zuqJ1Q_px5k.keys.json');
  
  var player;
  var playerPosition;
  function onYouTubePlayerAPIReady() {
    player = new YT.Player('videoPlayer', 
    {height: '390', width: '640', videoId: 'zuqJ1Q_px5k', playerVars: {'start': 0, controls: '0'} });
  }

  setInterval(function() {
    var p = player.getCurrentTime() || 0;
    position = Math.round(p * 1000);
    $("#time").html(position);
    vis.seek(position);
  }, 50)
